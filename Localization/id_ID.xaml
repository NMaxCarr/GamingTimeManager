<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Settings -->

    <sys:String x:Key="LOCGamingTimeManagerTimeLimitMin">Time limit (minutes) :</sys:String>
    <sys:String x:Key="LOCGamingTimeManagerPeriod">Period :</sys:String>
    <sys:String x:Key="LOCGamingTimeManagerWarnTimeOver">Warn me when time is over</sys:String>

    <!-- Alarm notification -->

    <sys:String x:Key="LOCGamingTimeManagerTimeOver">Time over</sys:String>
    <sys:String x:Key="LOCGamingTimeManagerMaxTimeAllowed">You've played your maximun gaming time allowed</sys:String>

    <!-- Summary notification -->

    <sys:String x:Key="LOCGamingTimeManagerSummary">You've played {0} of your {1} limit.</sys:String>

</ResourceDictionary>